<%- include('./includes/sidebar.ejs') %>

    <h1 class="p-4">Watch Chats</h1>

    <% if(errorMessage) { %>
        <h5 class="bg-danger m-4 p-4"><%= errorMessage%></h5>
    <% } %>
    <!---User profile starts-->
    <div class="card-body tab-content border-0">

        <!---//Actual Profile Data-->
        <div class="tab-pane active" id="profile">
            <h6>Admin Data</h6>
            <hr>
            <form action="/admin/watch-chats" method="get">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Username-1</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="username1" required>
                </div>

                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Username-2</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" name="username2" required>
                </div>
        </div><br>
        <button class="btn btn-outline-info" type="Submit">Submit</button>
        </form>

        
        <div class="card-body tab-content border-0">
            
            <% if(chats){ chats.forEach(chat=>{ %>
                
                <!---//Actual Profile Data-->
                <div class="tab-pane active" id="profile">
                    <hr>
                    
                    <p>
                        <b>
                        <% if (chat.sender == user_1._id) { %>
                            <%= user_1.username %>

                        <% } else { %>
                            <%= user_2.username %>
                        <% } %>
                    </b> : 

                        <%= chat.message %>

                    
                        
                    </p>


                </div>
            <%})} else{%>
                <div></div>
            <%}%>

        

    </div>

    </div>

    </div>
    </div>



    </div>
    </div>
    </div>
    </div>

