<%- include('./includes/sidebar.ejs') %>

    <h1 class="p-4">All Requests</h1>

    <!---User profile starts-->
    <div class="card-body tab-content border-0">

        <!---//Actual Profile Data-->
        <div class="tab-pane active" id="profile">

            <hr>
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-8 col-lg-10">
                        <h6 class="text-muted">Request List</h6>
                        <ul class="list-group">
                            <% requests.forEach(request=>{ %>
                                <li class="list-group-item d-flex justify-content-between align-items-center fw-bold">
                                    <a href="/admin/request/<%= request.username %>">
                                        <%= request.username %>
                                    </a>


                                    <p class="fw-bold">Status: Pending</p>

                                    <div style="max-width: 40px;">
                                        <img src="/uploads/<%= request.profile.profilePicture %>" class="img-fluid"
                                            alt="things">
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                </div>
            </div>


        </div>

    </div>

    </div>
    </div>



    </div>
    </div>
    </div>
    </div>

