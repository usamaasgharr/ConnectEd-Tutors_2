<%- include('./includes/head.ejs') %>

<link rel="stylesheet" type="text/css" href="assets/vendor/choices/css/choices.min.css">

</head>

<body>

<!-- Header START -->
<%- include('./includes/navigation') -%>
<!-- Header END -->

<!-- **************** MAIN CONTENT START **************** -->
<main>

    <!-- =======================
    Page Banner START -->
    <section class="py-0">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="bg-dark p-4 text-center rounded-3">
                        <h1 class="text-white m-0">Instructors list</h1>
                        <!-- Breadcrumb -->
                        <div class="d-flex justify-content-center">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb breadcrumb-dark breadcrumb-dots mb-0">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">instructor list</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- =======================
    Page Banner END -->
    
    <!-- =======================
    Inner part START -->
    <section class="pt-4">
        <div class="container">
            <!-- Search option START -->
            <div class="row mb-4 align-items-center">
                <!-- Search bar -->
                <!-- <div class="col-sm-6 col-xl-4"> -->
                    <form class="bg-body shadow rounded p-2" action="/search" method="get">
                        <div class="input-group input-borderless">
                            <input class="form-control me-1" type="search" placeholder="Search instructor" name="search_query" id="search_query">
                        </div>
                    
                <!-- </div> -->
            
                <!-- Select option -->
                <div class="col-sm-6 col-xl-3 mt-3 mt-lg-0">
                    <select class="form-select form-select-sm js-choice" aria-label=".form-select-sm" name="subject" id="subject">
                        <option value="all">Category</option>
                        <% for (let subject of subjects) { %>
                            <option value="<%= subject %>"><%= subject %></option>
                        <% } %>
                    </select>
                </div>
            
                <!-- Select option -->
                <div class="col-sm-6 col-xl-3 mt-3 mt-xl-0">
                    <select class="form-select form-select-sm js-choice" aria-label=".form-select-sm" name="country" id="country">
                        <option value="all">Location</option>
                        <% for (let country of countrys) { %>
                            <option value="<%= country %>"><%= country %></option>
                        <% } %>
                    </select>
                </div>
            
                <!-- Button -->
                <div class="col-sm-6 col-xl-2 mt-3 mt-xl-0 d-grid">
                    <!-- "Filter Results" button as submit -->
                    <button type="submit" class="btn btn-lg btn-primary mb-0">Filter Results</button>
                </div>
                <!-- Close the form here -->
                </form>
            </div>
            
            
            
            <!-- Search option END -->
    
            <!-- Instructor list START -->
            <div class="row g-4 justify-content-center">
    
                <!-- Card item START -->
                <% for (let user of data) { %>

                <div class="col-lg-10 col-xl-6">
                    <div class="card shadow p-2">
                        <div class="row g-0">
                            <!-- Image -->
                            <div class="col-md-4">
                                <img src="/uploads/<%= user.profile.profilePicture %>" class="rounded-3" alt="...">
                            </div>
    
                            <!-- Card body -->
                            <div class="col-md-8">
                                <div class="card-body">
                                    <!-- Title -->
                                    <div class="d-sm-flex justify-content-sm-between mb-2 mb-sm-3">
                                        <div>
                                            <h5 class="card-title mb-0"><a href="/user/<%= user.username %>"><%= user.profile.firstName %> <%= user.profile.lastName %></a></h5>
                                            <p class="small mb-2 mb-sm-0"><%= user.profile.title %></p>
                                        </div>
                                        <span class="h6 fw-light">4.3<i class="fas fa-star text-warning ms-1"></i></span>
                                    </div>
                                    <!-- Content -->
                                    <p class="text-truncate-2 mb-3"><%= user.profile.bio %></p>
                                    <!-- Info -->
                                    <div class="d-sm-flex justify-content-sm-between align-items-center">
                                        <!-- subjects -->
                                        
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
                <!-- Card item END -->
    
           
            <!-- Instructor list END -->
    
          
    
        </div>
    </section>

    

    
    </main>



<%- include('./includes/footer') -%>


<!-- Back to top -->
<div class="back-top"><i class="bi bi-arrow-up-short position-absolute top-50 start-50 translate-middle"></i></div>

<!-- Bootstrap JS -->
<script src="assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<!-- Vendors -->
<script src="assets/vendor/choices/js/choices.min.js"></script>

<!-- Template Functions -->
<script src="assets/js/functions.js"></script>

</body>
</html>