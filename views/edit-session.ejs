<%- include('./includes/head.ejs') %>

</head>

<body>

<!-- Header START -->
<%- include('./includes/navigation.ejs') %>
<!-- Header END -->

<!-- **************** MAIN CONTENT START **************** -->
<main>
	
    <!-- =======================
    Page Banner START -->
    <%- include('./includes/main.ejs')%>
                <!-- Right sidebar END -->
    
                <!-- Main content START -->
                <div class="col-lg-9 col-md-8 col-12">
					<!-- Card -->
					
					<!-- Form -->
					<form class="row gx-3" action="/user/edit-session" method="post" >
                        <input type="hidden" value = "<%= session._id %>" name= "sessionId">

                        <div class="mb-3 col-12 col-md-6">
                            <label class="form-label" for="fname">Start Time</label>
                            <input type="time" value="<%= session.start_time %>" id="startTime" class="form-control" name='start_time'  required="">
                        </div>

                        <div class="mb-3 col-12 col-md-6">
                            <label class="form-label" for="fname">End Time</label>
                            <input type="time" value="<%= session.end_time %>" id="endTime" class="form-control" name='end_time'  required="">
                        </div>

                        <div class="mb-3 col-12 col-md-6">
                            <label class="form-label" for="Price">Price</label>
                            <input type="number" value="<%= session.price %>" id="Price" class="form-control" name='price' placeholder="Pkr" required="">
                        </div>

                        <!-- Date -->
                        <div class="mb-3 col-12 col-md-6">
                            <label class="form-label" for="date">Date</label>
                            <input type="date" value="<%= session.date.toISOString().substr(0, 10) %>" id="date" class="form-control" placeholder="YYYY-MM-DD" name='date'  required="">
                        </div>
						
                        <div class="col-12">
                            <!-- Button -->
                            <button class="btn btn-primary" type="submit">
                                Edit Sessions
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('./includes/footer') -%>
<!-- ======================= Footer END -->

<!-- Back to top -->
<div class="back-top"><i class="bi bi-arrow-up-short position-absolute top-50 start-50 translate-middle"></i></div>

<!-- Bootstrap JS -->
<script src="assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
