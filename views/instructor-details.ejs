<%- include('./includes/head.ejs') %>

<link rel="stylesheet" type="text/css" href="assets/vendor/tiny-slider/tiny-slider.css">
<link rel="stylesheet" type="text/css" href="assets/vendor/aos/aos.css">

</head>

<body>

<!-- Header START -->
<%- include('./includes/navigation') -%>
<!-- Header END -->

<!-- **************** MAIN CONTENT START **************** -->
<main>

    <!-- =======================
    Page content START -->
    <section class="pt-5 pb-0">
        <div class="container">
            <div class="row g-0 g-lg-5">
    
                <!-- Left sidebar START -->
                <div class="col-lg-4">
                    <div class="row">
                        <div class="col-md-6 col-lg-12">
                            <!-- Instructor image START -->
                <div class="card shadow p-2 mb-4 text-center">
                  <div class="rounded-3">
                    <!-- Image -->
                    <img src="/uploads/<%= user.profile.profilePicture %>" class="card-img" alt="course image">
                  </div>
        
                  <!-- Card body -->
                  <div class="card-body px-3">
                    <!-- Rating -->
                    <ul class="list-inline">
                      <li class="list-inline-item me-0 small"><i class="fas fa-star text-warning"></i></li>
                      <li class="list-inline-item me-0 small"><i class="fas fa-star text-warning"></i></li>
                      <li class="list-inline-item me-0 small"><i class="fas fa-star text-warning"></i></li>
                      <li class="list-inline-item me-0 small"><i class="fas fa-star text-warning"></i></li>
                      <li class="list-inline-item me-0 small"><i class="fas fa-star-half-alt text-warning"></i></li>
                      <li class="list-inline-item ms-2 h6 fw-light mb-0">4.5/5.0</li>
                    </ul>
                    
                    
                  </div>
                </div>
                    
                        </div>
    
                        
                    </div> <!-- Row End -->
                </div>
                <!-- Left sidebar END -->
                    
                <!-- Main content START -->
                <div class="col-lg-8">
                
                    <!-- Title -->
                    <h5 class="mb-0">Hi, I am</h5>
                    <h1 class="mb-0 text-capitalize"><%= user.profile.firstName %> <%= user.profile.lastName %></h1>
                    <p><%= user.profile.title %></p>
                    <!-- Content -->
                    <p class="mt-4"><%= user.profile.bio %></p>
                    <!-- Personal info -->
                    <ul class="list-group list-group-borderless">
                        <li class="list-group-item px-0">
                            <span class="h6 fw-light"><i class="fas fa-fw fa-map-marker-alt text-primary me-1 me-sm-3"></i>Username:</span>
                            <span><%= user.username %></span>
                        </li>
                        <li class="list-group-item px-0">
                            <span class="h6 fw-light"><i class="fas fa-fw fa-map-marker-alt text-primary me-1 me-sm-3"></i>Location:</span>
                            <span><%= user.profile.location.city %>, <%= user.profile.location.country %></span>
                        </li>
                        <li class="list-group-item px-0">
                            <span class="h6 fw-light"><i class="fas fa-fw fa-envelope text-primary me-1 me-sm-3"></i>Email:</span>
                            <span><%= user.email %></span>
                        </li>

                        <% for (let subject of user.profile.subjects) { %>
                            <li class="list-group-item px-0">
                                <span class="h6 fw-light"><i class="fas fa-fw fa-envelope text-primary me-1 me-sm-3"></i>Expertise:</span>
                                <span><%= subject %></span>
                            </li>
                        <% } %>
                        <li class="p-3" ><form action="/user/chats" method="get"><input name="receiver" type="hidden" value="<%= user._id %>"><button class="btn btn-primary" type="submit">Contact Me</button></form></li>
                    </ul>
                    
                   
    
                    <!-- Course START -->
                    <div class="row g-4 mt-4">
                        <!-- Title -->
                        <h2>Available Sessions</h2>
    
                        <!-- Card item START -->
                        <div class="row g-4 mt-2">
                            <% sessions.forEach((item)=>{%>
                                <div class="col-sm-6 col-lg-4">
                                    <div
                                        class="d-flex justify-content-center align-items-center p-4 bg-warning bg-opacity-15 rounded-3">
                                        
                                            <div class="ms-4">
                                                <div class="d-flex">
                                                    <h5>Time: <%= item.start_time %> - <%= item.end_time %>
                                                    </h5><br>
                                                </div>
                                                <h6>Date: <%= item.date %></h6>
                                                <h6>Price : <%= item.price %></h6>
                                                <span class="mb-0 h6 fw-light"></span>
                                            <div class="d-flex">
                                            <form class="m-1" action="/user/book-this-session" method = 'get'>
                                                <input type="hidden" value="<%= item._id %>" name="sessionId">

                                                <% if(item.isAvailable == true) { %>
                                                    <button class="btn btn-secondary" type="submit">Book This Session </button>
                                                <% } else{ %>
                                                    <button class="btn btn-danger text-white" disabled > Not Available</button>
                                                <% } %>
                                            </form>
                                        </div>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                                <% })%>
                                    <!-- Counter item -->

                        </div>
                        <!-- Card item END -->
    
                    </div>
                    <!-- Course END -->
          </div>
                <!-- Main content END -->
    
            </div><!-- Row END -->
        </div>
    </section>
    <!-- =======================
    Page content END -->
    
    <!-- =======================
    Related instructor START -->
    <section>
        <div class="container">
            <!-- Title -->
            <div class="row mb-4">
                <h2 class="mb-0">Reviews</h2>
            </div>
    
            <!-- Slider START -->
            <div class="tiny-slider arrow-round arrow-creative arrow-blur arrow-hover text-center">
                <div class="tiny-slider-inner" data-autoplay="false" data-arrow="true" data-dots="false" data-items="4" data-items-lg="3" data-items-md="2" data-items-xs="1">
                    <% review.forEach(item =>{ %>
                    <div class="col-md-4 mb-5 mb-md-0">
                        <div class="d-flex justify-content-center mb-4">
                          <img src="/uploads/<%= item.studentDetails.profile.profilePicture%>"
                            class="rounded-circle shadow-1-strong" width="150" height="150" />
                        </div>
                        <a href="<%= item.studentDetails.username %>"><h5 class="mb-3"><%= item.studentDetails.profile.firstName %> <%= item.studentDetails.profile.lastName %></h5></a>
                        <h6 class="text-primary mb-3">Web Developer</h6>
                        <p class="px-xl-3">
                          <i class="fas fa-quote-left pe-2"></i><%= item.Review.comment %>
                        </p>
                        <ul class="list-unstyled d-flex justify-content-center mb-0">
                            <% for (let i=0; i < item.Review.rating; i++ ){%>
                                <li class="list-inline-item me-0"><i class="fas fa-star text-warning"></i></li>
                                <% } %>
                                <% for (let i=item.Review.rating; i <5; i++ ){%>
                                <li class="list-inline-item me-0"><i class="far fa-star text-warning"></i></li>
                                <% } %>
                        </ul>
                      </div>
                      <% }) %>
                   
    
                </div>
            </div>
            <!-- Slider END -->
    
        </div>
    </section>
    <!-- =======================
    Related instructor END -->
    
    </main>
    <!-- **************** MAIN CONTENT END **************** -->


<!-- ======================= Footer START -->
<%- include('./includes/footer') -%>
<!-- ======================= Footer END -->

<!-- Back to top -->
<div class="back-top"><i class="bi bi-arrow-up-short position-absolute top-50 start-50 translate-middle"></i></div>

<!-- Bootstrap JS -->
<script src="assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<!-- Vendors -->
<script src="assets/vendor/purecounterjs/dist/purecounter_vanilla.js"></script>
<script src="assets/vendor/tiny-slider/tiny-slider.js"></script>
<script src="assets/vendor/aos/aos.js"></script>

<!-- Template Functions -->
<script src="assets/js/functions.js"></script>

</body>
</html>
